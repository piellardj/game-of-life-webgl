{
    "title": "Game of Life",
    "description": "Variations of Conway's Game of Life, running on GPU.",
    "introduction": [
        "This project is a simple simulation of Conway's Game of Life, running on GPU.",
        "The rules can be changed to see how the world evolves. You can use the mouse to zoom in and explore the world."
    ],
    "githubProjectName": "game-of-life-webgl",
    "additionalLinks": [],
    "scriptFiles": [
        "script/main.js"
    ],
    "indicators": [
        "Iterations per second",
        "Iteration",
        "Grid size"
    ],
    "canvas": {
        "width": 512,
        "height": 512,
        "enableFullscreen": true
    },
    "controlsSections": [
        {
            "title": "Simulation",
            "controls": [
                {
                    "title": "Autorun",
                    "type": "checkbox",
                    "id": "autorun-checkbox-id",
                    "checked": true
                },
                {
                    "title": "Speed",
                    "type": "range",
                    "id": "speed-range-id",
                    "min": 1,
                    "max": 6,
                    "value": 6,
                    "step": 1
                },
                {
                    "type": "button",
                    "id": "next-button-id",
                    "label": "Next step",
                    "flat": true
                },
                {
                    "type": "button",
                    "id": "reset-button-id",
                    "label": "Reset",
                    "flat": true
                }
            ]
        },
        {
            "title": "Rendering",
            "controls": [
                {
                    "title": "Persistence",
                    "type": "range",
                    "id": "persistence-range-id",
                    "min": 0,
                    "max": 4,
                    "value": 0,
                    "step": 1
                },
                {
                    "title": "Show indicators",
                    "type": "checkbox",
                    "id": "indicators-checkbox-id",
                    "checked": true
                }
            ]
        },
        {
            "title": "Rules",
